@using Razor_PartialView.Services;
@model PersonInfo

@{
    ViewData["Title"] = "MyData Page";
}

<div>
    <form asp-action="MyDataView" asp-controller="Home" method="post" asp-antiforgery="true">
        <div class="container align-content-center justify-content-center col-6">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control"/>
       </div>
        <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last name</label>
                <input asp-for="LastName" class="form-control" />
      </div>
        <div class="mb-3">
                <label asp-for="Surname" class="form-label">Surname</label>
                <input asp-for="Surname" class="form-control" />
      </div>
        <div class="mb-3">
            <label asp-for="City">Select city</label>
                <select asp-for="City" asp-items="ViewBag.Cities" class="form-select">
                <option selected="selected" disabled="disabled"></option>
            </select>
      </div>
        <div class="mb-3">
          <label asp-for="Hobby">Select hobby</label>
                <select asp-for="Hobby" asp-items="ViewBag.Hobbies" multiple class="form-select">
                <option selected="selected" disabled="disabled"></option>
            </select> 
      </div>
            <div class="mb-3">
                <label asp-for="Gender">Man</label>
                <input asp-for="Gender" type="radio" value="Man"/>
                <label asp-for="Gender">Women</label>
                <input asp-for="Gender" type="radio" value="Women" />
      </div>
        <div class="mb-3">
                <label asp-for="DateOfBithd" class="form-label">Select date of bithd </label>
                <input type="date" asp-for="DateOfBithd" class="form-control" />
      </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
   </form>
</div>
 